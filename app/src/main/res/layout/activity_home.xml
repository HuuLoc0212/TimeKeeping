<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:background="@drawable/bg_home"
        >
        <RelativeLayout
            android:layout_marginTop="64dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/imguser"
                android:src="@drawable/user_1"
                android:layout_width="92dp"
                android:layout_height="92dp"/>

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyen Huu Loc"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_toRightOf="@id/imguser"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/txtPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_below="@id/txtUserName"
                android:layout_alignStart="@id/txtUserName"
                android:layout_marginTop="4dp"/>
            <ImageView
                android:id="@+id/imgNotification"
                android:src="@drawable/noti_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/txtUserName"
                app:tint="@color/white"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/txtTyping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YWork hard today, succeed tomorrow "
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginStart="32dp"
            android:layout_marginHorizontal="10dp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txtUserName"
            android:layout_alignStart="@id/txtUserName"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:columnCount="2"
        android:rowCount="2"
        android:layout_centerInParent="true">

        <!-- Button 1: Màu xanh lá cây -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_margin="8dp"
            android:background="@drawable/btn1_bg"
            android:drawableTop="@drawable/checkin"
            android:drawablePadding="8dp"
            android:text="Button 1"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="16dp"/>

        <!-- Button 2: Màu đỏ -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_margin="8dp"
            android:background="@drawable/btn2_bg"
            android:drawableTop="@drawable/check_out"
            android:drawablePadding="8dp"
            android:text="Button 2"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="16dp"/>

        <!-- Button 3: Màu cam -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_margin="8dp"
            android:background="@drawable/btn3_bg"
            android:drawableTop="@drawable/checkout"
            android:drawablePadding="8dp"
            android:text="Button 3"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="16dp"/>

        <!-- Button 4: Màu xanh dương -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_margin="8dp"
            android:background="@drawable/btn4_bg"
            android:drawableTop="@drawable/comeback"
            android:drawablePadding="8dp"
            android:text="Button 4"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="16dp"/>

    </GridLayout>
</RelativeLayout>